<h1>Welcome {{user.firstName}}</h1>
<h3>Your Stories</h3>
{{#if stories}}
   <table class="striped">
      <thead>
         <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
         </tr>
      </thead>
      <tbody>
         {{#each stories}}
            <tr>
               <td><a href="/stories/show/{{id}}">{{title}}</a></td>
               <td>{{formatDate data 'MMMM Do YYYY'}}</td>
               <td><span class="dash-status">{{status}}</span></td>
               <td><a href="/stories/edit/{{id}}" class="btn left-align"><i class="fa fa-pencil"></i> Edit </a></td>
               <!-- Not truly a post request, need method override for that as cannot delete from a form -->
               <td>
                  <form action="/stories/{{id}}" method='post' id='delete-form'>
                     <button type='submit' class="btn red"><i class="fa fa-remove"></i>   Delete </button>
                     
                  </form>
               </td>
            </tr>
         {{/each}}
      </tbody>
   </table>
{{else}}
   <p>You have not written any story yet</p>
{{/if}}
