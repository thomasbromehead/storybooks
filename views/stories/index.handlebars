<h1>Stories</h1>
<div class="row">
   {{#each stories}} 
      <div class="col s12 m4">
         <div class="card">
            <div class="card-image">
               <a href="/stories/edit/{{id}}" class="btn-floating halfway-fab red">
               <i class="fa fa-pencil"></i>
               </a>
            </div>
            <div class="card-content center-align">
               <h5>{{title}}</h5>
               <p class="story-text">{{truncate (stripTags body) 90 }}</p> 
               <br>

               <div class="chip">
                  <img src="{{User.image}}" alt="Contact Person">
                  <p>{{user.firstName}} {{user.lastName}}</p>
               </div>
            </div>
            <div class="card-action center-align">
               <form action="/stories/show/{{id}}">
                  <button type="submit" class="btn grey"> Read More </button>
               </form>
            </div>
         </div>
      </div>
   {{else}}
   <p>No Stories Found</p>
   {{/each}}
</div>
